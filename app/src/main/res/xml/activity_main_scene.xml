<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/mid"
        motion:constraintSetStart="@id/start"
        motion:duration="7000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/moon"
               motion:framePosition="50"
               android:alpha="0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/helal"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/ramadan_kareem"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mid">
        <Constraint
            android:id="@+id/moon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/ramadan_kareem"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="400dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:alpha="0" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" >
        <Constraint
            android:id="@+id/man"
            android:layout_width="100dp"
            android:layout_height="250dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/helal"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/moon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:alpha="0" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/mid"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd"
        motion:duration="1000"
        >
        <OnClick motion:targetId="@+id/helal" />
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/moon"
                motion:framePosition="10"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/helal"
                motion:framePosition="10"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/man"
                motion:framePosition="75"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>